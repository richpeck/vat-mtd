<auth>
  {% if user %}

    {{ "💾 Grant HMRC Access"   | link_to: "/auth/hmrc_vat", "Grant HMRC Access" | replace: '<a', '<a class="btn" data-method="post"' }}
    {{ "⚙️ support@pcfixes.com" | link_to: "/settings", "Settings" | replace: '<a', '<a class="btn"' }}
    {{ "❌ Log Out"             | link_to: "/logout", "Logout" | replace: '<a', '<a class="btn" data-method="delete" rel="nofollow" data-confirm="Really?"' }}

  {% else %}

    {{ "🔒 Login" | link_to: "/login", "Login" | replace: '<a', '<a class="btn"' }}
    {{ "✔️ Register" | link_to: "/register", "Register" | replace: '<a', '<a class="btn"' }}

  {% endif %}
</auth>
